<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.redriver.measurements.io"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-sdk android:minSdkVersion="12" android:maxSdkVersion="15"/>


    <uses-feature android:name="android.hardware.usb.host"/>
    <application
            android:name=".usb.FrameReceiverApplication"
            android:label="@string/app_name"
            android:icon="@drawable/ic_launcher">

        <activity
                android:name="com.redriver.measurements.activities.UsbActivity"
                android:label="UsbActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"/>
                <action android:name="android.hardware.usb.action.USB_DEVICE_DETACHED"/>
                <action android:name= "com.redriver.measurements.MeasureRecord" />
                <!-- <action android:name="android.hardware.usb.action.USB_STATE" /> -->
            </intent-filter>
            <meta-data
                    android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"
                    android:resource="@xml/device_filter"/>
        </activity>

        <activity
                android:name="com.redriver.measurements.activities.SearchableActivity"
                android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>
            <meta-data
                    android:name="android.app.searchable"
                    android:resource="@xml/searchable"/>
        </activity>


        <meta-data
                android:name="android.app.default_searchable"
                android:value=".SearchableDictionary"/>

        <!-- 测试用外部库 正式发布时请注释掉 -->
        <uses-library android:name="android.test.runner"/>

    </application>

    <instrumentation
            android:name="android.test.InstrumentationTestRunner"
            android:targetPackage="com.redriver.measurements.io"
            android:label="Test for my app"/>

</manifest>
